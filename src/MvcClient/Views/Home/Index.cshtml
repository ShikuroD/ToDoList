@model TaskViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
    <div class="container-fluid">
        <div class="navbar-wrapper">
            <a class="navbar-brand" href="javascript:;">Trang chủ</a>
        </div>
    </div>
</nav>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title mt-0"> Danh sách công việc</h4>
                    @* <p class="card-category"> Here is a subtitle for this table</p> *@
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="">
                                    <th width="10%" style="text-align:center;">ID</th>
                                    <th width="25%" style="text-align:center;">Tiêu đề</th>
                                    <th width="15%" style="text-align:center;">Trạng thái</th>
                                    <th width="25" style="text-align:center;">Người tạo</th>
                                    <th width="15%" style="text-align:center;">Ngày kết thúc</th>
                                    <th width="10%" style="text-align:center;">Phạm vi</th>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.Tasks){
                                        <tr>
                                            <td style="text-align:center;">@item.Id</td>
                                            <td style="text-align:center;">@item.Title</td>
                                            <td style="text-align:center;">@item.StatusName</td>
                                            <td style="text-align:center;">@item.RegisteredUserName</td>
                                            <td style="text-align:center;">@item.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td style="text-align:center;">@item.ScopeName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>