@model UserModel
@using AppCore.Models
@{
    ViewData["Title"] = "Thêm nhân viên";
}
@using Microsoft.AspNetCore.Http
@{
    if (Context.Session.GetInt32("id") == null)
        Context.Response.Redirect(Url.Action("Index", "Login", null));
}
<div class="header bg-primary pb-6">
    <div class="container-fluid ">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Nhân viên</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home"><i
                                        class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Nhân viên</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thêm</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-8 order-xl-1">
                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Thêm nhân viên mới</h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form method="POST">
                                <h6 class="heading-small text-muted mb-4">Thông tin cá nhân</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-name">Họ và tên</label>
                                                <input asp-for="User.Name" class="form-control">
                                                <span asp-validation-for="User.Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-phone">Số điện
                                                    thoại</label>
                                                <input asp-for="User.PhoneNumber" class="form-control">
                                                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-address">Địa chỉ</label>
                                                <input class="form-control" placeholder="Home Address"
                                                    asp-for="User.Address">
                                                <span asp-validation-for="User.Address" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4" />
                                <!-- Account -->
                                <h6 class="heading-small text-muted mb-4">Thông tin tài khoản</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Tên tài
                                                    khoản</label>
                                                <input asp-for="User.Username" class="form-control">
                                                <span asp-validation-for="User.Username" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-name">Vị trí</label>
                                                <select class="form-control" asp-for="User.Role"
                                                    asp-items="Html.GetEnumSelectList<Role>()">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Mật khẩu</label>
                                                <input asp-for="User.Password" class="form-control">
                                                <span type="password" asp-validation-for="User.Password"
                                                    class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-username">Nhập lại mật
                                                    khẩu</label>
                                                <input type="password" asp-for="User.ConfirmPassword"
                                                    class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4" />
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <input type="submit" value="Thêm" class="btn btn-primary" />
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
