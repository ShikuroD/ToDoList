@model LogViewModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Log";

}
@if (Context.Session.GetInt32("id") == null)
{
    Context.Response.Redirect(Url.Action("Index", "Login", null));

}

<div class="header bg-primary">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col">
                    <h6 class="h2 text-white d-inline-block mb-0">Nhật ký hoạt động</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home"><i
                                        class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Nhật ký hoạt động</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt-6">
    <div class="row">
        <div class="col">
            @foreach (var log in @Model.Logs)
            {

                var split = log.ToString().Split(" || ");
                var name = split[0];
                var action = split[1];
                var field = split[2];

                <div class="card">
                    <div class="card-body">
                        <div class="pl-lg-4">
                            @name
                            @if (@action.Trim().Equals("cập nhật"))
                            {
                                <span style="color:green; font-weight:600">
                                    @action
                                </span>
                            }
                            else
                            {
                                if (@action.Trim().Equals("thêm"))
                                {
                                    <span style="color:blue; font-weight:600">
                                        @action
                                    </span>
                                }
                                else
                                {
                                    if (@action.Trim().Equals("thay đổi"))
                                    {
                                        <span style="color:purple; font-weight:600">
                                            @action
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="color:red; font-weight:600">
                                            @action
                                        </span>
                                    }

                                }
                            }
                            @field
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    <div class="row">
        <div class="col">
            <nav aria-label="...">
                <ul class="pagination justify-content-end mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">
                            <i class="fas fa-angle-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">
                            <i class="fas fa-angle-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>